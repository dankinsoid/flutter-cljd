     (keyword? arg0)
     (let [[args children] (ut/key-values-args-and-children (cons arg0 args))]
       (pd/padding* args (last children)))

     (= 1 (count args))
     (pd/padding* arg0 (first args))

     :else
     (throw (ex-info "Invalid arguments for padding: " (cons arg0 args))))))

