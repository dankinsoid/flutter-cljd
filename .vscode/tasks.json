{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "clj",
      "args": [
        "-M:cljd", 
        "compile"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [
        {
          "owner": "clojure",
          "pattern": [
            {
              "regexp": "^⛔️ (.+) at line: (\\d+), column: (\\d+), file: (.+)$",
              "message": 1,
              "line": 2,
              "column": 3,
              "file": 4
            }
          ],
          "severity": "error",
          "fileLocation": ["relative", "${workspaceFolder}/src/"]
        }
      ]
    },
    {
      "label": "Test",
      "type": "shell",
      "command": "clj",
      "args": [
        "-M:cljd",
        "test"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Flutter Run (macOS)",
      "type": "shell",
      "command": "clj",
      "args": [
        "-M:cljd",
        "flutter",
        "-d", "macos",
        "--enable-impeller"
      ],
      "options": {
        "cwd": "${workspaceFolder}/example"
      },
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      },
      "problemMatcher": [
        {
          "owner": "clojure",
          "pattern": [
            {
              "regexp": "^⛔️ (.+) at line: (\\d+), column: (\\d+), file: (.+)$",
              "message": 1,
              "line": 2,
              "column": 3,
              "file": 4
            }
          ],
          "severity": "error",
          "fileLocation": ["relative", "${workspaceFolder}/example/src/"],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".",
            "endsPattern": "^$never$"
          }
        }
      ]
    }
  ]
}